<robot name="simple_box">
  <link name="my_box">
    <inertial>
      <origin xyz="0 0 0" /> 
      <mass value=".0" />
      <inertia  ixx=".0" ixy=".0"  ixz=".0"  iyy=".0"  iyz=".0"  izz=".0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.001 10 10" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.1 10 10" />
      </geometry>
    </collision>
  </link>
</robot>